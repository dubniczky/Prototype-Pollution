# https://editorconfig.org/

# Root editorconfig
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{*.yml,*.json}]
indent_size = 2

[*.sh]
end_of_line = lf

[*.ps1]
end_of_line = crlf

[Makefile]
indent_style = tab
tab_width = 4
